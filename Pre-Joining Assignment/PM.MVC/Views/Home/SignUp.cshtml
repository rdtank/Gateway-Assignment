@model PM.Models.Models.UserViewModel

@{
    ViewBag.Title = "SignUp";
}

<div class="pt-5">
    <h2 class="text-center">SignUp</h2>

    <div class="container">
        <div class="row">
            <div class="col-md-5 mx-auto">
                <div class="card card-body">
                    @using (Html.BeginForm(Html.BeginForm("SignUp", "Home", FormMethod.Post, new { enctype = "multipart/form-data" })))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.U_Name)
                            <div>
                                @Html.EditorFor(model => model.U_Name, new { htmlAttributes = new { @class = "form-control mw-100" } })
                                @Html.ValidationMessageFor(model => model.U_Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.U_Email)
                            <div>
                                @Html.EditorFor(model => model.U_Email, new { htmlAttributes = new { @class = "form-control text-lowercase mw-100" } })
                                @Html.ValidationMessageFor(model => model.U_Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.U_Password)
                            <div>
                                @Html.EditorFor(model => model.U_Password, new { htmlAttributes = new { @class = "form-control mw-100" } })
                                @Html.ValidationMessageFor(model => model.U_Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.U_CPassword)
                            <div>
                                @Html.EditorFor(model => model.U_CPassword, new { htmlAttributes = new { @class = "form-control mw-100" } })
                                @Html.ValidationMessageFor(model => model.U_CPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group pt-1">
                            <button type="submit" class="btn btn-primary btn-block mw-100">Sign Up   <i class="fa fa-user-o"></i></button>
                        </div>
                    }

                    <p class="small-xl pt-3 text-center">
                        <span class="text-muted">Already Have an Account,</span>
                        @Html.ActionLink("Login", "Login", new { controller = "Home" }, new { @class = "text-decoration-none" })
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>